<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<bean id="person" class="study.ex3.Person">
		<constructor-arg value="구혜선" />
		<property name="phone" value="010-2222-3333" />
	</bean>

	<bean id="mycart" class="study.ex3.MyCart" scope="singleton"> <!-- 생략시 singleton -->
		<constructor-arg value="블라우스" />
		<constructor-arg value="12000" />
		<property name="person" ref="person" />
	</bean>

</beans>
