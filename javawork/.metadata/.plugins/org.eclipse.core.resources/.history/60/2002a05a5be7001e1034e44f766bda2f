		while(true) {
			int score [] = null;

			
			System.out.println("=".repeat(45));
			System.out.println("1.학생수  2.점수입력  3.점수리스트  4.분석  5.종료");
			System.out.println("=".repeat(45));
			
			System.out.print("선택 > ");
			choice = sc.nextInt(); 
			
			if(choice == 5) {
				System.out.println("종료");
				break;
			}
			if(choice == 1) {
				System.out.print("학생수 > ");
				stuNum = sc.nextInt();
			}
			if(choice == 2) {
				for(int i = 0; i<=stuNum; i++) {
					System.out.printf("score[%d] > ", i);
					score[i] = sc.nextInt();
				}

			}
		}


